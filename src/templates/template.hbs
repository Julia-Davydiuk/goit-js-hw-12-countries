{{#each this}}
<div class="search__result-text">
    <h1 class="search__result-country-name">{{name}}</h1>
    <p class="search__result-capital"><span>Capital:</span> {{capital}}</p>
    <p class="search__result-population"><span>Population:</span> {{population}}</p>

    <ul class="search__result-languages-list"><span>Languages:</span>
        {{#each this.languages}}
        <li class="search__result-languages-item">{{name}}</li>
        {{/each}}
    </ul>
</div>

<div class="search__result-image">
    <img class="search__result-flag" src="{{flag}}" alt="flag of {{name}}" width="200"
    height="200">
</div>
{{/each}}